body{font:17px/1.6 sans-serif;text-rendering:optimizeLegibility;padding:2rem;max-width:70ch;margin:0 auto}header h1{display:inline}pre,code{font-size:inherit;background:#eee}pre{margin-bottom:2rem}pre code{display:block;border:none;padding:1em;background:0 0;overflow-x:auto}code{background:#eee}.writing ul li,.home ul li{list-style-type:none;display:flex;font-variant-numeric:tabular-nums}.home ul li a{white-space:nowrap;overflow:hidden;text-overflow:ellipsis}ul,ol{padding:0}time{padding-right:1rem}blockquote{margin:1em 0;padding:0 2em;border-left:3px solid #eee}img{max-width:100%}a,a:visited{color:initial}.social-icons a svg{height:26px;width:26px}.social-icons a:not(:last-of-type){margin-inline-end:12px}.social-icons{padding:12px 0}